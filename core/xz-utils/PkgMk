# Description: Free general-purpose data compression software
# URL: http://tukaani.org/xz/
# Maintainer: Remi Pommarel, repk at triplefau dot lt


NAME=xz-utils
VERSION=5.0.5


DEPENDS=""
SOURCES="http://tukaani.org/xz/xz-${VERSION}.tar.gz"


pkgmain() {
	cd xz-${VERSION}
	patch_unknown_target build-aux/config.sub

	./configure --build=${CLFS_HOST} --host=${CLFS_TARGET}		\
		--prefix=/usr

	make -j${NR_JOBS}
	make DESTDIR=${PKG} install
	mkdir ${PKG}/bin
	mv -v ${PKG}/usr/bin/xz ${PKG}/usr/bin/lzma			\
		${PKG}/usr/bin/lzcat ${PKG}/usr/bin/unlzma		\
		${PKG}/usr/bin/unxz ${PKG}/usr/bin/xzcat ${PKG}/bin
}
