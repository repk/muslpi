# Description: software utility library from GTK+'s project
# URL: https://developer.gnome.org/glib/
# Maintainer: Remi Pommarel, repk at triplefau dot lt


NAME=glib
VERSION=2.38.2


DEPENDS=""
SOURCES="http://ftp.gnome.org/pub/gnome/sources/glib/2.38/glib-2.38.2.tar.xz"
PATCHES="glib.patch"
HOST_PKG=1


pkgmain() {
	cd ${NAME}-$VERSION

	process_patches

	#disable man pages as it needs xsltproc to build
	PKG_CONFIG_PATH="${TOOLCHAIN_DIR}/lib/pkgconfig"		\
	PKG_CONFIG_SYSROOT_DIR="${TOOLCHAIN_DIR}"			\
	CFLAGS="-D_GNU_SOURCE -D_BSD_SOURCE"				\
	./configure --prefix=/ --enable-man=no --disable-systemtap

	make -j${NR_JOBS}
	fix_temporary_libtool_files
	make DESTDIR=${PKG} install
}
